pipeline {
    agent any

    triggers  {
      pollSCM '* * * * *'
    }
    tools{
        maven 'M2_HOME'
    }
    stages {
        stage('checkout'){
            steps{
                git branch 'jenk-eks-ecr', url: 'https://github.com/patangana/geolocation.git'
            }
        }
        stage('code build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
     
}
