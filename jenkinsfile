pipeline {
    agent any
    tools{
        maven 'M2_HOME'
    }
    environment {
    registry = '119729913111.dkr.ecr.us-east-1.amazonaws.com/geolocation_ecr_rep'
    registryCredential = 'geolocation_ecr_rep'
    dockerimage = ''
  }
    stages {
        stage('Checkout'){
            steps{
                git branch: 'jenk-ecr', url: 'https://github.com/patangana/geolocation.git'
            }
        }
        stage('Code Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Build Image') {
            steps {
                script{
                    dockerImage = docker.build registry
                } 
            }
        }
        stage('Pushing to ECR') {
            steps{
                script{ 
                    sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 119729913111.dkr.ecr.us-east-1.amazonaws.com'
                    sh 'docker push 119729913111.dkr.ecr.us-east-1.amazonaws.com/geolocation_ecr_rep:latest'
                    
                }
            }
        }  
        //deploy the image that is in ECR to our EKS cluster
        stage ("Kube Deploy") {
            steps {
                withKubeConfig([credentialsId: 'eks_credential', serverUrl: '']) {
                 sh "kubectl apply -f eks_deploy_from_ecr.yaml"
                
            }
          }
        }
    }
}